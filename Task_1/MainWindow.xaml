<Window x:Class="Task_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Path Fill="Red" Stroke="Black" StrokeThickness="2">
            <Path.Data>
                <CombinedGeometry >
                    <CombinedGeometry.Geometry1>
                        <GeometryGroup>
                        <EllipseGeometry RadiusX="150" RadiusY="150" Center="200, 180"/>
                        <EllipseGeometry RadiusX="120" RadiusY="120" Center="200, 180"/>
                        </GeometryGroup>
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <RectangleGeometry Rect="80, 160, 250, 40">
                            <RectangleGeometry.Transform>
                                <RotateTransform Angle="135" CenterX="200" CenterY="180"/>
                            </RectangleGeometry.Transform>
                        </RectangleGeometry>
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Path.Data>
        </Path>
    </Grid>
</Window>
